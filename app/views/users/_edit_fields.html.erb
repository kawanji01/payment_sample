<h3 class="text-center text-success font-weight-bold mt-5 mb-3">認証設定</h3>

<%= f.label :email, "メールアドレス", class: 'small' %>
<%= f.email_field :email, class: "form-control mb-4", placeholder: "メールアドレスを入力してください。" %>

<%= f.label :password, "新しいパスワード", class: 'small' %>
<%= f.password_field :password, class: "form-control mb-4", placeholder: "半角英数字６文字以上" %>

<%= f.label :password_confirmation, "パスワード確認", class: 'small' %>
<%= f.password_field :password_confirmation, class: "form-control mb-4", placeholder: "もう一度パスワードを入力してください。" %>
