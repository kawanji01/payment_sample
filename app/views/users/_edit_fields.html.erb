<div class="my-4 text-center">
  <%= icon_for f.object %>
</div>
<div class="my-4 text-center">
  <%= f.file_field :icon, accept: 'image/jpeg,image/gif,image/png' %>
  <% if f.object.icon? %>
    <label class="d-block mt-3">
      <%= f.check_box :remove_icon %>
      画像を削除
    </label>
  <% end %>
</div>

<%= f.label :name, "名前", class: 'small' %>
<%= f.text_field :name, class: "form-control mb-4", placeholder: "ユーザー名を入力してください。" %>


<%= f.label :profile, "プロフィール", class: 'small' %>
<%= f.text_area :profile, class: "form-control mb-4", placeholder: "500文字以内でプロフィールを入力してください。", rows: 4 %>


