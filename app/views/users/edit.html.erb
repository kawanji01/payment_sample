<% set_meta_tags noindex: true %>


<div class="d-block mt-4"></div>
<%= render 'layouts/breadcrumb', items_hash: @breadcrumb_hash %>

<div class="container bg-white pt-5 pb-5 my-5">

  <div class="row justify-content-md-center">

    <div class="col-md-6">

      <h1 class="font-weight-bold text-center"><%= title 'アカウント設定' %></h1>
      <%= form_with model: @user, local: true do |f| %>
        <%= render "shared/error_messages", object: f.object %>

        <%= render 'users/edit_fields', f: f %>


        <%= f.submit "更新する", class: "btn btn-solid w-100 main-loading-show-btn my-5" %>

      <% end %>

      <div class="d-block py-5"></div>
      <!--
      <p><a href="<#%= withdrawal_confirmation_user_url(@user) %>" class="btn btn-sm btn-border-gray">アカウントを消去する</a></p>
      -->


      <script type="text/javascript">
          $('#user_icon').bind('change', function () {
              var size_in_megabytes = this.files[0].size / 1024 / 1024;
              if (size_in_megabytes > 5) {
                  alert('最大画像サイズは2MBです。より小さなファイルを選択して下さい。');
              }
          });
      </script>
    </div>
  </div>
</div>
