<% set_meta_tags noindex: true %>


<div class="d-block mt-4"></div>
<%= render 'layouts/breadcrumb', items_hash: @breadcrumb_hash %>

<div class="container bg-white pt-5 pb-5 my-5">

  <div class="row justify-content-md-center">

    <div class="col-md-6">

      <h1 class="font-weight-bold mb-5"><%= title @title %></h1>
      <%= render 'subscriptions/item', subscription: @subscription %>

      <%= link_to "追加購入する", checkout_unit_purchases_path(subscription_id: @subscription.id),
                  class: 'btn btn-solid main-loading-show-btn w-100',
                  data: { "turbolinks" => false } %>


      <div class="d-block py-5"></div>
      <% if @unit_purchases.present? %>
        <h1 class="font-weight-bold mt-5 mb-5"><%= '追加購入履歴' %></h1>

        <%= render partial: 'unit_purchases/item', collection: @unit_purchases, as: "unit_purchase" %>


      <% end %>


      <div class="d-block py-5"></div>


    </div>
  </div>
</div>
