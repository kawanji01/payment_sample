<%= form_with model: unit, local: true do |f| %>

  <%= render "shared/error_messages", object: f.object %>

  <%= f.label :stripe_price_id, "stripe_price_id", class: 'item-label my-3' %>
  <%= f.text_field :stripe_price_id, class: "form-control", placeholder: 'price_xxxxx' %>

  <%= f.label :plan_id, "plan_id", class: 'item-label my-3' %>
  <%= f.number_field :plan_id, class: "form-control", placeholder: 'plan_id' %>

  <%= f.label :amount, "amount", class: 'item-label my-3' %>
  <%= f.number_field :amount, class: "form-control", placeholder: 'Amount' %>

  <%= f.submit "OK", class: "btn btn-solid w-100 my-5 main-loading-show-btn" %>

<% end %>